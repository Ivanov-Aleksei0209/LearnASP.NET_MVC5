@model ManyToManyApp.Models.Student
@using ManyToManyApp.Models
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <h4>Student</h4>

    <div class="create-label"><b>Name</b></div>
    <div class="create-field">
        @Html.EditorFor(model => model.Name)
    </div>

    <div class="create-label"><b>Surname</b></div>
    <div class="create-field">
        @Html.EditorFor(model => model.Surname)
    </div>

    <div class="create-label"><b>Courses</b></div>
    foreach (Course c in ViewBag.Courses)
    {
        <input type="checkbox" name="selectedCourses" value="@c.Id" />@c.Name <br />
    }

    <p>
        <input type="submit" value="Save" />
    </p>
}